
    <header>
        <h1>Finstagram</h1>
        <!-- heading1 at the top of the page-->
    </header>
    <main role="main">
        <% @posts.each do |post| %>
        <article class="post">
            <div class="user-info">
                <img src="<%= post[:avatar_url] %>" alt="<%= post[:username] %>">
                <h2><%= post[:username] %></h2>
                <h3><%= post[:humanized_time_ago] %></h3>
            </div>
            <a class="photo" href="#">
                <!-- link to go to when you click on image-->
               <img src="<%= post[:photo_url] %>" alt="post from <%= post[:username] %>">
            </a>
            <!-- anchor tag for teh power of linking-->

            <div class="actions">
                <%= post[:like_count] %> likes
                <span class="comment-count"><%= post[:comment_count]%> comment</span>
            </div>


            <ul class="comments">
                <% post[:comments].each do |comment| %>
                <!-- Unordered list-->
                <li>
                    <!-- List item-->
                    <p>
                        <%= comment[:comments] %>: <%= comment[:text] %>
                    </p>
                    <!-- tag signifies paragraph-->

                </li>
                 <% end %>
            </ul>
           

        </article>
    <% end %>
</main>