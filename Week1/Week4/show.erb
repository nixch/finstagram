
    <header>
        <h1>Finstagram</h1>
        <div class="login-info">
            <% if current_user %>
             <%= current_user.username %>
             <a href="/logout">LOGOUT</a>
             <% else %>
              <a href="/login">Login</a>
              <a href="/signup">signup</a>
              <% end %>
        </div>
        <!-- heading1 at the top of the page-->
    </header>
    <main role="main">
      
        <article class="post">
            <div class="user-info">
                <img src="<%= @post.user.avatar_url %>" alt="<%= @post.user.username %>"
                <h2><%= @post.user.username %></h2>
                <h3><%= @post.humanized_time_ago %></h3>
            </div>
            <a class="photo" href="#">
                <!-- link to go to when you click on image-->
               <img src="<%= @post.photo_url %>" alt="post from <%= @post.user.username %>">
            </a>
            <!-- anchor tag for teh power of linking-->

            <div class="actions">
                <%= @post.like_count %> likes: <%= @post.fish_count %> fish!
                <span class="comment-count"><%= @post.comment_count%> comments</span>
            </div>


            <ul class="comments">
                <% @post.comments.each do |comment| %>
                <!-- Unordered list-->
                <li>
                    <!-- List item-->
                    <p>
                        <%= comment.user.username %>: <%= comment.text %>
                    </p>
                    <!-- tag signifies paragraph-->

                </li>
                 <% end %>
            </ul>
   
       <ul class="comments">
                <% @post.fish.each do |t| %>
                <!-- Unordered list-->
                <li>
                    <!-- List item-->
                    <p>
                        <%= t.user.username %>: <%= t.name %>
                    </p>
                    <!-- tag signifies paragraph-->

                </li>
                 <% end %>
            </ul>
           

        </article>
  
</main>